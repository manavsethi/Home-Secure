<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.manav.app2.MainActivity">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Temperature"
        android:id="@+id/tv1"
        android:layout_marginLeft="30dp"
        android:layout_marginStart="30dp"
        android:layout_above="@+id/tv2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="49dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textViewTemp"
        android:layout_alignTop="@+id/tv1"
        android:layout_alignLeft="@+id/textViewHumidity"
        android:layout_alignStart="@+id/textViewHumidity"
        android:layout_alignRight="@+id/textViewHumidity"
        android:layout_alignEnd="@+id/textViewHumidity" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Humidity"
        android:id="@+id/tv2"
        android:layout_above="@+id/tv3"
        android:layout_alignLeft="@+id/tv1"
        android:layout_alignStart="@+id/tv1"
        android:layout_marginBottom="47dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textViewHumidity"
        android:layout_alignTop="@+id/tv2"
        android:layout_alignLeft="@+id/textViewGas"
        android:layout_alignStart="@+id/textViewGas"
        android:layout_alignRight="@+id/textViewGas"
        android:layout_alignEnd="@+id/textViewGas" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Gas "
        android:id="@+id/tv3"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/tv2"
        android:layout_alignStart="@+id/tv2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textViewGas"
        android:layout_below="@+id/tv2"
        android:layout_alignBottom="@+id/tv3"
        android:layout_alignLeft="@+id/toggleButtonSecurity"
        android:layout_alignStart="@+id/toggleButtonSecurity"
        android:layout_alignRight="@+id/toggleButtonSecurity"
        android:layout_alignEnd="@+id/toggleButtonSecurity" />

    <ToggleButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Security"
        android:id="@+id/toggleButtonSecurity"
        android:layout_marginTop="47dp"
        android:checked="false"
        android:layout_marginRight="41dp"
        android:layout_marginEnd="41dp"
        android:layout_below="@+id/textViewGas"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Security"
        android:id="@+id/textView"
        android:layout_alignBaseline="@+id/toggleButtonSecurity"
        android:layout_alignBottom="@+id/toggleButtonSecurity"
        android:layout_alignLeft="@+id/tv3"
        android:layout_alignStart="@+id/tv3" />
</RelativeLayout>
